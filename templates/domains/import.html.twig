{% extends 'base.html.twig' %}

{% block main_content %}
    <div class="main-content__title">
        <h1 class="h2">{{ 'label.import_title' | trans({'%domain%': domain}) | desc("Importer un fichier de traductions dans '%domain%'") }}</h1>
    </div>
    <div class="container-fluid">
        {{ form_start(form) }}
            {{ form_row(form.file) }}
            {{ form_row(form.sourceType) }}
            {{ form_row(form.localeCode) }}
            {{ form_row(form.keep) }}

            <div class="form-actions">
                <button type="submit" class="btn btn-dark">
                    {{ 'label.create_action' | trans | desc("Valider") }}
                </button>
            </div>
        {{ form_end(form) }}

    </div>
{% endblock %}
