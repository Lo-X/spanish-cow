{% extends 'base.html.twig' %}

{% block main_content %}
    <div class="main-content__title">
        <h1 class="h2">{{ 'label.delete_asset_title' | trans({'%asset%': asset.resname}) | desc("Supprimer l'asset '%asset%'") }}</h1>
    </div>
    <div class="container-fluid">
        {{ form_start(form) }}

        <div>
            <p>{{ 'label.delete_asset_confirmation' | trans({'%asset%': asset.resname}) | desc("Êtes-vous sûr de vouloir supprimer l'asset '%asset%' ? Cette action est irréversible.") }}</p>
        </div>

        <div class="form-actions">
            <a href="{{ path('translate', {'project': project.id, 'domain': asset.domain.id, 'active': asset.id}) }}" class="btn btn-dark">
                {{ 'label.back' | trans | desc("Retour") }}
            </a>
            <button type="submit" class="btn btn-danger">
                {{ 'label.delete' | trans | desc("Supprimer") }}
            </button>
        </div>
        {{ form_end(form) }}

    </div>
{% endblock %}
