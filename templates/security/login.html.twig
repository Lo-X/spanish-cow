{% extends 'base_login.html.twig' %}

{% block main %}
    <div class="login-form">
        <img src="{{ asset('img/logo.svg') }}" alt="Spanish Cow" width="100" height="100" />
        <h1>{{ 'label.login_title' | trans | desc("Se connecter") }}</h1>

        {% if error %}
            <div class="alert alert-error">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form action="{{ path('login') }}" method="post">
            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" placeholder="{{ 'label.username' | trans | desc("Adresse e-mail") }}" />
            <input type="password" id="password" class="form-control" name="_password" placeholder="{{ 'label.password' | trans | desc("Mot de passe") }}" />

            <div class="form-actions">
                <button type="submit" class="btn btn-dark btn-block">{{ 'label.login' | trans | desc("Connexion") }}</button>
            </div>
        </form>
    </div>
{% endblock %}
